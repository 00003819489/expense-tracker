def add_expense():
    a = input("Enter category: ")
    n = int(input("Enter the amount: "))
    d = input("Enter date (YYYY-MM-DD): ")
    cursor.execute("INSERT INTO EXP (CATEGORY, AMOUNT, DATE) VALUES (?, ?, ?)", (a, n, d))
    conn.commit()
    print("Expense added!")
def viewexpense():
    cursor.execute("SELECT * FROM EXP")
    r = cursor.fetchall()
    for i in r:
        print(i)
def viewdetailed():
